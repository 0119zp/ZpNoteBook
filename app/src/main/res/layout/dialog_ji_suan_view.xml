<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:padding="10dp"
        android:background="@drawable/bg_shape_ji_suan_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="14sp"
                android:textColor="#067ded"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="#067ded"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:editable="false"
            android:background="@drawable/bg_shape_ji_suan_edit"
            android:padding="8dp"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:textColor="#000"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/ac_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="AC"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/delete_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="Del"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/percent_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="%"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/divide_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="÷"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/num_seven"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/num_eight"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/num_nine"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/multiply_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="×"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/num_four"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/num_five"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="5"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/num_six"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/subtract_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="-"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/num_one"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/num_two"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/num_three"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="+"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/num_zero"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="0"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/dot_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="."
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/equal_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/bg_select_ji_suan_btn"
                    android:text="="
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>