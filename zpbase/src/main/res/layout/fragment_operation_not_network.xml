<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eeeeee">

    <ImageView
        android:id="@+id/iv_not_work_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon_network_error" />

    <TextView
        android:id="@+id/tv_not_work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_not_work_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="网络请求失败"
        android:textColor="#666666"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_not_work_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_not_work_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="请检查您的网络\n重新加载吧"
        android:textColor="#999999"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_not_work_refresh"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_not_work_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_button_666666_border"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="#ff333333"
        android:textSize="16sp" />

</RelativeLayout>